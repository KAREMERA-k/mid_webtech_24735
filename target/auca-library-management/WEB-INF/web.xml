<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>AUCA Library Management System</display-name>

  <!-- Welcome file configuration -->
  <welcome-file-list>
    <welcome-file>register.jsp</welcome-file>
  </welcome-file-list>

  <!-- User Controller Servlet -->
  <servlet>
    <servlet-name>UserController</servlet-name>
    <servlet-class>com.auca.library.controller.UserController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <url-pattern>/UserController</url-pattern>
  </servlet-mapping>

  <!-- Book Controller Servlet -->
  <servlet>
    <servlet-name>BookController</servlet-name>
    <servlet-class>com.auca.library.controller.BookController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BookController</servlet-name>
    <url-pattern>/BookController</url-pattern>
  </servlet-mapping>

  <!-- Location Controller Servlet -->
  <servlet>
    <servlet-name>LocationController</servlet-name>
    <servlet-class>com.auca.library.controller.LocationController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LocationController</servlet-name>
    <url-pattern>/LocationController</url-pattern>
  </servlet-mapping>

</web-app>
